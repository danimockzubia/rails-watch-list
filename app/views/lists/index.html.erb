<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">All Lists</a>
  </nav>
  <div class='container mt-3'>
      <div class='row'>
        <div class='col-12'>
          <h3>Lists(<%= @lists.size %>)</h3>
        </div>
      </div>
      <div class='row'>
        <% @lists.each do |list| %>
          <div class="col-4">
            <div class='cards'>
              <div class='content-card'>
                <% if list.photo.attached?%>
                <h3><%= link_to list.name, list_path(list), class: "nav-link" %></h3>
                <div class="card-category" style="background-image: url('<%= cl_image_path list.photo.key, height: 300, width: 400 %>')"></div>
                <% else %>
                <div class="card-category"></div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
          <br>
      <div class='button-card'>
        <%=link_to "Add a List", new_list_path, class: 'btn' %>
      </div>
  </div>
</body>
